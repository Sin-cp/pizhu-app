/* pages/login/login.wxss */
.header {
  position: fixed;
  top: 0px;
  width: 100%;
  height: 300rpx;
  /* border: 1rpx #1A5BFF solid; */
  background-color: #0061AE;
  z-index: 1;
}

.card {
  width: 90%;
  height: max-content;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 8rpx 8rpx 20rpx #c8c8c8;
  z-index: 2;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 130rpx;
}

.cardContent {
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  padding-top: 50rpx;
  width: 95%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cellGroup {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.field {
  width: 90%;
  border-bottom: 1rpx red solid;
}

.checkbox {
  display: flex;
  flex-direction: row-reverse;
  width: 95%;
  margin: 20rpx 0 40rpx 0;
}

.btnBox {
  background-color: #0061AE;
  border-radius: 15rpx;
  border: 1rpx;
  width: 100%;
}
.footer{
  font-size: 23rpx;
  color: #5b5252;
  position: absolute;
  bottom: 50rpx;
}